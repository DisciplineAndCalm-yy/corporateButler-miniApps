/* pages/subpages/pages/policyStoreMessage.wxss */
.policyStoreMessage {
  overflow: hidden;
}
.message_title_class {
  position: static!important;
}
.policyStoreMessage .content_wrap {
  height: 100%;
  background:#f5f6fa;
  overflow-y: scroll;
  padding: 40rpx;
}
.message_card {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.message_card .message_icon {
  margin: 20rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: #3f74f6;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.message_icon .message_icon_imgs {
  width: 44rpx;
  height: 50rpx;
}
.message_icon .message_icon_noread {
  position: absolute;
  top: 0;
  right: 5%;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #f00;
}
.message_card .message_content {
  width: calc(100% - 120rpx);
}
.message_content .message_content_title {
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
  padding: 30rpx 20rpx 30rpx 0;
}
.message_content .message_content_tip {
  color: #999;
  font-size: 28rpx;
  font-weight: 400;
  padding: 0 30rpx 30rpx 0;
}
/* 底部空元素 */
.empty {
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom) / 2);
}
.has_nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(153, 153, 153, 0.60);
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 6rpx;
  padding: 40rpx 0;
}
.nodata_img {
  width: 300rpx;
  height: 300rpx;
}