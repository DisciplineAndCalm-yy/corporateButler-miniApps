/* pages/subPagesForEcharts/pages/projectSuperviseDetail/projectSuperviseDetail.wxss */
.projectStatus {
  background-color: #f3f5fa;
}
.projectStatus_title_class {
  background-color: #fff;
}
/* 内容区 */
.project_content {
	padding: 40rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	letter-spacing: -0.3px;
}
/* 项目信息 */
.project_infowrap {
	padding: 30rpx 30rpx 20rpx 60rpx;
	border-radius: 20rpx;
	background: #FFF;
}
.project_titles {
  display: flex;
  align-items: center;
	position: relative;
	font-weight: 600;
}
.project_subtitle {
  position: absolute;
  left: -6rpx;
  top: 50%;
  transform: translate(-100%, -50%);
  font-size: 20rpx;
  color: #0F7CEE;
  margin-right: 6rpx;
}
.project_infos {
	padding: 14rpx 0;
	font-size: 26rpx;
	font-weight: 400;
}
.project_infos_item {
	padding: 6rpx 0;
	display: flex;
	align-items: center;
}
.project_infositem_label {
	color: #999;
}
.project_info_tag {
	display: inline-block;
	padding: 4rpx 14rpx;
	border-radius: 3px;
	opacity: 0.6;
	font-size: 24rpx;
	margin-right: 20rpx;
	color: #3F74F6;
	background-color: #B9CDFF;
}
.orange_tag {
	color: #FF5207;
	background-color: #FFCD9E;
}
/* 督办 */
.project_supervise_title {
	display: flex;
	align-items: center;
	padding: 30rpx 0 20rpx;
	color: #0F7CEE;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 30rpx;
	font-style: normal;
	font-weight: 600;
	letter-spacing: -0.3px;
}
.project_supervise_subtitle {
	width: 8rpx;
	height: 26rpx;
	flex-shrink: 0;
	border-radius: 6rpx;
	background: #0F7CEE;
	margin-right: 20rpx;
}
/* 督办卡片 */
.projectSupervise_card {
	padding: 20rpx 30rpx 40rpx;
	border-radius: 20rpx;
	background: #FFF;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.projectSupervise_card:not(:last-child) {
	margin-bottom: 30rpx;
}
.projectSupervise_item {
	padding: 20rpx 0;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.projectSupervise_item:not(:first-child) {
	border-top: 1px solid #e9e9e9;
}
.projectSupervise_item_label {
	color: #666;
	white-space: nowrap;
}
.projectSupervise_btnwrap {
	margin-top: 40rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.projectSupervise_btns {
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	color: #fff;
	border-radius: 10rpx;
	background: #187FFF;
}