/* pages/subPagesForEcharts/pages/projectStatus/projectStatus.wxss */
.projectStatus {
  background-color: #f3f5fa;
}
.projectStatus_title_class {
  background-color: #fff;
}
/* 内容区 */
.project_content {
	padding: 40rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	letter-spacing: -0.3px;
}
/* 项目信息 */
.project_infowrap {
	padding: 30rpx 30rpx 20rpx 60rpx;
	border-radius: 20rpx;
	background: #FFF;
}
.project_titles {
  display: flex;
  align-items: center;
	position: relative;
	font-weight: 600;
}
.project_subtitle {
  position: absolute;
  left: -6rpx;
  top: 50%;
  transform: translate(-100%, -50%);
  font-size: 20rpx;
  color: #0F7CEE;
  margin-right: 6rpx;
}
.project_infos {
	padding: 14rpx 0;
	font-size: 26rpx;
	font-weight: 400;
}
.project_infos_item {
	padding: 6rpx 0;
	display: flex;
	align-items: center;
}
.project_infositem_label {
	color: #999;
}
.project_info_tag {
	display: inline-block;
	padding: 4rpx 14rpx;
	border-radius: 3px;
	opacity: 0.6;
	font-size: 24rpx;
	margin-right: 20rpx;
	color: #3F74F6;
	background-color: #B9CDFF;
}
.orange_tag {
	color: #FF5207;
	background-color: #FFCD9E;
}
/* 项目状态卡片 */
.project_status_card {
	margin-top: 40rpx;
	position: relative;
}
.project_status_titlewrap {
	height: 130rpx;
	border-radius: 20rpx;
	background: #E4F1FF;
	position: relative;
}
.project_status_record {
	position: absolute;
	top: 20rpx;
	right: 30rpx;
	color: #848398;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 26rpx;
	font-style: normal;
	font-weight: 400;
	z-index: 99;
}
.project_status_titles {
	position: absolute;
	left: 0;
	top: 0;
	height: 100rpx;
	padding: 20rpx 20rpx 0;
	text-align: center;
	color: #FFF;
	border-radius: 20rpx 0 0 0;
	background: #0F7CEE;
}
.project_status_content {
	position: absolute;
	top: 70rpx;
	left: 0;
	right: 0;
	border-radius: 20rpx;
	background: #fff;
}
.project_status_item {
	padding: 30rpx;
	display: flex;
	/* align-items: center; */
	justify-content: space-between;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.project_status_item:not(:first-child) {
	border-top: 1px solid #e9e9e9;
}
.status_item_label {
	color: #666;
}
.red_must {
	color: #F72C2C;
	margin-right: 4rpx;
}
.status_filewrap {
	position: relative;
	color: #999;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 22rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.status_fileupload {
	width: 160rpx;
	height: 160rpx;
	text-align: center;
	line-height: 160rpx;
	border: 1px solid #d9d9d9;
	border-radius: 20px;
	margin-bottom: 10rpx;
}
.status_fileupload_icon {
	display: inline-block;
	color: #d9d9d9;
	font-size: 54rpx;
	transform: rotate(45deg);
}
.project_status_btnwrap {
	padding: 0 40rpx 40rpx;
	margin-top: 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.project_status_btns {
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	flex-shrink: 0;
	border-radius: 10rpx;
	border: 2rpx solid #187FFF;
	background: #FFF;
	color: #187FFF;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 26rpx;
	font-style: normal;
	font-weight: 400;
}
.status_submitbtn {
	color: #fff!important;
	background: #187FFF!important;
}
.status_imgs {
	width: 160rpx;
	height: 160rpx;
	flex-shrink: 0;
	border-radius: 16rpx;
}
.status_video {
	width: 160rpx;
	height: 160rpx;
	flex-shrink: 0;
	border-radius: 16rpx;
}
.image_frame_icon {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -14rpx;
  right: -14rpx;
}
/* 弹窗 */
.confirm_popup {
	width: 70vw;
	border-radius: 20rpx;
	background: #FFF;
}
.popup_topicon {
	position: relative;
	margin: 0 auto;
	top: -60rpx;
	width: 130rpx;
	height: 130rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #ECF3FF;
	border-radius: 50%;
}
.popup_imgs {
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
}
.popup_desc {
	color: #333;
	text-align: center;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.popup_tips {
	padding: 20rpx 0 40rpx;
	color: #000;
	text-align: center;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 30rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.popup_btns {
	padding: 0 40rpx 40rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
	color: #006EE6;
	font-family: PingFang SC;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
}
.popup_btn_item {
	width: 140rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	flex-shrink: 0;
	border-radius: 20rpx;
	border: 1rpx solid #187FFF;
	background: #FFF;
}
.submit_btn {
	color: #fff;
	background: #187FFF;
}