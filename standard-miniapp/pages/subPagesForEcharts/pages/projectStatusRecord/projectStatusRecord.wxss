/* pages/subPagesForEcharts/pages/projectStatusRecord/projectStatusRecord.wxss */
.projectStatusRecord {
  background-color: #f3f5fa;
}
.projectStatusRecord_title_class {
  background-color: #fff;
}
/* 内容区 */
.project_content {
	padding: 40rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	letter-spacing: -0.3px;
}
/* 项目信息 */
.project_infowrap {
	padding: 30rpx 30rpx 20rpx 60rpx;
	border-radius: 20rpx;
	background: #FFF;
	margin-bottom: 40rpx;
}
.project_titles {
  display: flex;
  align-items: center;
	position: relative;
	font-weight: 600;
}
.project_subtitle {
  position: absolute;
  left: -6rpx;
  top: 50%;
  transform: translate(-100%, -50%);
  font-size: 20rpx;
  color: #0F7CEE;
  margin-right: 6rpx;
}
.project_infos {
	padding: 14rpx 0;
	font-size: 26rpx;
	font-weight: 400;
}
.project_infos_item {
	padding: 6rpx 0;
	display: flex;
	align-items: center;
}
.project_infositem_label {
	color: #999;
}
.project_info_tag {
	display: inline-block;
	padding: 4rpx 14rpx;
	border-radius: 3px;
	opacity: 0.6;
	font-size: 24rpx;
	margin-right: 20rpx;
	color: #3F74F6;
	background-color: #B9CDFF;
}
.orange_tag {
	color: #FF5207;
	background-color: #FFCD9E;
}
/* 项目状态卡片 */
.project_status_card {
	position: relative;
}
.project_status_titlewrap {
	height: 130rpx;
	border-radius: 20rpx;
	background: #E4F1FF;
	position: relative;
}
.project_status_record {
	position: absolute;
	top: 20rpx;
	right: 30rpx;
	color: #848398;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 26rpx;
	font-style: normal;
	font-weight: 400;
	z-index: 99;
}
.project_status_titles {
	position: absolute;
	left: 0;
	top: 0;
	height: 100rpx;
	padding: 20rpx 20rpx 0;
	text-align: center;
	color: #FFF;
	border-radius: 20rpx 0 0 0;
	background: #0F7CEE;
}
.project_status_content {
	position: relative;
	top: -60rpx;
	left: 0;
	right: 0;
	border-radius: 20rpx;
	background: #fff;
}
.project_status_item {
	padding: 30rpx;
	display: flex;
	/* align-items: center; */
	justify-content: space-between;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.project_status_item:not(:first-child) {
	border-top: 1px solid #e9e9e9;
}
.status_item_label {
	color: #666;
}
.red_must {
	color: #F72C2C;
	margin-right: 4rpx;
}
.status_imgs {
	width: 160rpx;
	height: 160rpx;
	flex-shrink: 0;
	border-radius: 16rpx;
}
/* 底部空元素 */
.empty {
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.has_nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(153, 153, 153, 0.60);
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 6rpx;
  padding: 40rpx 0;
}
.nodata_img {
  width: 300rpx;
  height: 300rpx;
}