/* pages/subPagesForEcharts/pages/clockIn/clockIn.wxss */
.clockIn {
  /* min-height: 100vh; */
  background-color: #f3f5fa;
}
.clockIn_content_wrap {
  padding-top: 30rpx;
}
.clockIn_content {
  margin: 0 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.clockIn_wrap {
  padding: 80rpx 0 60rpx;
  text-align: center;
}
.clockIn_btn {
  margin: 0 auto;
  width: 300rpx;
  height: 300rpx;
  line-height: 300rpx;
  border-radius: 50%;
  font-weight: 700;
  font-size: 48rpx;
  color: #fff;
  background: linear-gradient(144.26deg, #467BF2 12.13%, #2C5CEC 95.34%);
  box-shadow: 0px 0px 30px 6px #B3C6FF;
}
.disable_btn {
  color: #999;
  background: #EDEDED;
  box-shadow: 0px 0px 30px 6px #EDEDED;
}
.clockIn_desc {
  margin-top: 40rpx;
  color: #999;
  font-weight: 400;
  font-size: 28rpx;
}
.canclock_icon {
  color: #2CC699;
}
.noclock_icon {
  color: #F2746C;
}

.clockIn_descwrap {
  margin-top: 40rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  font-weight: 400;
  font-size: 28rpx;
}
.must_red {
  color: red;
}
.clockIn_textarea {
  width: calc(100% - 40rpx);
  padding: 20rpx;
  border: 1px solid #E6E6E6;
  border-radius: 20rpx;
}
.clockIn_textarea_tip {
  width: 100%;
  display: inline-block;
  text-align: right;
  color: #999;
  font-weight: 400;
  font-size: 20rpx;
}
.clockIn_savebtn {
  margin-top: 80rpx;
  padding: 10rpx 0;
  font-weight: 700;
  font-size: 28rpx;
  color: #fff;
  background: #187FFF;
  border-radius: 20rpx;
}

.clockIn_enterprise {
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.clockIn_selectIcon_wrap {
  position: relative;
  padding-right: 30rpx;
  display: inline-block;
  max-width: 50vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.clockIn_selectIcon {
  content: '';
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 10rpx;
  right: 0rpx;
  border-left: 4rpx solid #666;
  border-bottom: 4rpx solid #666;
  -webkit-transform: translate(0, 0) rotate(225deg);
  transform: translate(0, 0) rotate(225deg);
}
.image_frame {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.image_frame_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.image_frame_icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -14rpx;
  right: -14rpx;
}
.upload_pic {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 15rpx;
  border: 1px solid #D9D9D9;
  background: #FFF;
}
.camera_icon {
  color: #8F9EB2;
  font-size: 36rpx;
}
.change_position {
  font-size: 42rpx;
  color: #fff;
}
/* 弹出层 */
.clock_popup_wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 99;
}
.camera {
	flex: 1;
	width: 100%;
	position: relative;
}
.camera camera {
	width: 100vw;
	height: 100vh;
	box-sizing: border-box;
}
.camera_btnwrap {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  color: #FFF;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 26rpx;
  font-style: normal;
  font-weight: 400;
  letter-spacing: -0.3px;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.camera_btnwrap_item {
  display: flex;
  align-items: center;
  margin: 60rpx 0;
  padding: 0 60rpx;
}
.camera_btnwrap_item view {
  flex: 1;
}
.camera_btns {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background: #FFF;
  text-align: center;
  color: #187FFF;
  font-family: Alibaba PuHuiTi 2.0;
  font-size: 26rpx;
  font-style: normal;
  font-weight: 400;
  letter-spacing: -0.3px;
}
.camera_icon {
  font-size: 40rpx;
  color: #187FFF;
}
.canvas_cont {
	width: 0px;
	height: 0px;
	position: fixed;
	left: 90000000px;
	z-index: -999;
	overflow: hidden;
}
.camera_cont {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 998;
}
.preview_image_cont {
  width: 100vw;
  height: 100vh;
}
.preview_image {
  width: 100vw;
  height: 100vh;
}
.preview_items {
  z-index: 999;
}