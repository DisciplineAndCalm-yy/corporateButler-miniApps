/* pages/accontLogin/accontLogin.wxss */
.accontLogin {
  width: 100%;
  height: 100vh;
  position: relative;
}
.topbj {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
.login_info {
  position: relative;
  z-index: 2;
  padding-top: 30vh;
}
.login_info_title {
  margin: 0 auto;
  text-align: center;
  color: #333;
  font-weight: 700;
  font-size: 36rpx;
}

.login_info_title_bottomline {
  position: relative;
  margin: -10rpx auto 100rpx;
  z-index: -1;
  width: 180rpx;
  height: 16rpx;
  background: linear-gradient(90deg, #BECCFF -4.85%, rgba(237, 241, 255, 0) 91.26%);
  border-radius: 40rpx;
}

.login_btn_wrap {
  margin: 0 auto 40rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  width: 70%;
  border: 1px solid #E6E6E6;
  border-radius: 20rpx;
}
.login_icon {
  color: #ddd;
  margin-right: 20rpx;
}
.login_input {
  color: #999;
  font-weight: 400;
  font-size: 28rpx;
}
.loginbtn {
  margin: 0 auto;
  width: calc(70% + 40rpx);
  height: 80rpx;
  line-height: 80rpx;
  background: #187FFF;
  border-radius: 20rpx;
  color: #fff;
  font-weight: 700;
  font-size: 28rpx;
}

.login_popup {
  padding: 40rpx;
  color: #333;
  font-size: 28rpx;
}
.login_popup_top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.login_popup_top_btn {
  margin: 0;
  padding: 0rpx 30rpx;
  font-size: 24rpx;
  color: #fff;
  background: #187FFF;
  border-radius: 20rpx;
}
.login_identity {
  margin-top: 30rpx;
}
.login_identity .t-radio {
  margin-right: 40rpx;
}
.login_identity .t-radio__title {
  font-size: 28rpx;
}
.login_identity .t-radio__icon {
  display: flex;
  align-items: center;
}
.login_identity .t-radio__icon--left {
  margin-right: 0;
}
.login_identity .t-icon-base {
  font-size: 40rpx;
}
.login_identity .t-radio__icon-circle::after {
  width: 60rpx;
  height: 60rpx;
}