/* pages/subPagesForEcharts/pages/mineSteward/mineSteward.wxss */
.mineSteward {
  min-height: calc(100vh - 120rpx - env(safe-area-inset-bottom)/2);
  background-color: #f3f5fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)/2);
}
/* 顶部 */
.mineSteward_topwrap {
  position: relative;
  z-index: 2;
  text-align: center;
}
.mineSteward_topwrap_imgs {
  width: 100vw;
  height: 25vh;
}
.mineSteward_infowrap {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
.mineSteward_infowrap_title {
  color: #fff;
}
/* 信息 */
.mineSteward_infowrap_infos {
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
}
.mineSteward_infowrap_avatar {
  width: 134rpx;
  height: 134rpx;
  border-radius: 50%;
}
.mineSteward_infowrap_avatars {
  width: 130rpx;
  min-width: 130rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  border: 6rpx solid #fff;
  border-radius: 50%;
  font-size: 50rpx;
  color: #fff;
}
.mineSteward_infowrap_infocard {
  padding: 0 40rpx;
  color: #fff;
  font-weight: 400;
  font-size: 28rpx;
  text-align: left;
}
.infowrap_infos {
  display: flex;
  margin-bottom: 20rpx;
}
.infos_name {
  font-weight: 700;
  font-size: 36rpx;
  margin-right: 30rpx;
}
.infowrap_tagwrap {
  display: flex;
  align-items: center;
}
.infos_tagswrap {
  position: relative;
  margin-right: -20rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #fff;
  border-radius: 50%;
  color: #3B8DFF;
  text-align: center;
}
.infos_fontwrap {
  padding: 2rpx 12rpx 2rpx 24rpx;
  background-color: #fff;
  color: #3B8DFF;
  border-radius: 12rpx;
  white-space: nowrap;
}
/* 内容 */
.mineSteward_contentcard {
  margin: 0 40rpx;
  padding: 50rpx 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  position: relative;
  margin-top: -5vh;
  z-index: 3;
}

.contentcard_item {
  display: flex;
  align-items: center;
  position: relative;
  padding: 30rpx 0;
}
.item_icons {
  color: #1B7FFF;
  font-size: 36rpx;
}
.contentcard_item_label {
  color: #333;
  font-weight: 400;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.contentcard_item_icon {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 0rpx;
  border-left: 4rpx solid #DBDBDB;
  border-bottom: 4rpx solid #DBDBDB;
  -webkit-transform: translate(0, 0) rotate(225deg);
  transform: translate(0, 0) rotate(225deg);
}