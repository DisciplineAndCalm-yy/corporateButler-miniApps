/* pages/subPagesForEcharts/pages/projectProgress/projectProgress.wxss */
.projectProgress {
  background-color: #f3f5fa;
}
.projectProgress_title_class {
  background-color: #fff;
}
/* 内容区 */
.project_content {
	padding: 40rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	letter-spacing: -0.3px;
}
/* 项目信息 */
.project_infowrap {
	padding: 30rpx 30rpx 20rpx 60rpx;
	border-radius: 20rpx;
	background: #FFF;
}
.project_titles {
  display: flex;
  align-items: center;
	position: relative;
	font-weight: 600;
}
.project_subtitle {
  position: absolute;
  left: -6rpx;
  top: 50%;
  transform: translate(-100%, -50%);
  font-size: 20rpx;
  color: #0F7CEE;
  margin-right: 6rpx;
}
.project_infos {
	padding: 14rpx 0;
	font-size: 26rpx;
	font-weight: 400;
}
.project_infos_item {
	padding: 6rpx 0;
	display: flex;
	align-items: center;
}
.project_infositem_label {
	color: #999;
}
.project_info_tag {
	display: inline-block;
	padding: 4rpx 14rpx;
	border-radius: 3px;
	opacity: 0.6;
	font-size: 24rpx;
	margin-right: 20rpx;
	color: #3F74F6;
	background-color: #B9CDFF;
}
.orange_tag {
	color: #FF5207;
	background-color: #FFCD9E;
}
/* 项目工期 */
.project_progress_title {
	display: flex;
	align-items: center;
	padding: 30rpx 0 20rpx;
	color: #0F7CEE;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 30rpx;
	font-style: normal;
	font-weight: 600;
	letter-spacing: -0.3px;
}
.project_progress_subtitle {
	width: 8rpx;
	height: 26rpx;
	flex-shrink: 0;
	border-radius: 6rpx;
	background: #0F7CEE;
	margin-right: 20rpx;
}
/* 项目工期卡片 */
.project_progress_card {
	border-radius: 20rpx;
	background: #FFF;
}
.project_progress_card:not(:last-child) {
	margin-bottom: 30rpx;
}
.progress_card_title {
	padding: 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1px solid #EFF0F6;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 700;
}
.progress_card_status {
	padding: 4rpx 20rpx;
	color: #FFF;
	font-family: PingFang SC;
	font-size: 22rpx;
	font-weight: 400;
	border-radius: 35rpx;
	background-color: #2AC511;
}
.status_notcomplate {
	background-color: #FFA800;
}
.progress_card_info {
	padding: 20rpx 30rpx 20rpx 60rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 26rpx;
	font-style: normal;
	font-weight: 500;
	letter-spacing: -0.3px;
}
.progress_card_infoitem {
	display: flex;
	padding: 4rpx 0;
}
.progress_infoitem_label {
	white-space: nowrap;
	color: #999;
	font-weight: 400;
}
.progress_tocomplate {
	margin: 40rpx auto 0;
	padding: 16rpx 0;
	width: 50vw;
	border-radius: 10rpx;
	background: #187FFF;
	color: #FFF;
	text-align: center;
	font-family: PingFang SC;
	font-size: 26rpx;
	font-style: normal;
	font-weight: 400;
}
.blue_font {
	color: #1890FF;
}
/* 底部空元素 */
.empty {
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.has_nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(153, 153, 153, 0.60);
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 6rpx;
  padding: 40rpx 0;
}
.nodata_img {
  width: 300rpx;
  height: 300rpx;
}