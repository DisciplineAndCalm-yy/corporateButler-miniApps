/* custom-tab-bar/index.wxss */
.tabBar {
  z-index: 100;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  font-size: 20rpx;
  background: #fff;
  color: #999;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, .3);
  padding-bottom: calc(env(safe-area-inset-bottom)/2);
}

.cont {
  margin-top: 10rpx;
  padding: 0;
  z-index: 10;
  /* height: calc(100rpx + env(safe-area-inset-bottom) / 2); */
  /* padding-bottom: calc(env(safe-area-inset-bottom) / 2); */
  display: flex;
}

.cont .item {
  font-size: 24rpx;
  position: relative;
  z-index: 20;
  flex: 1;
  text-align: center;
  padding: 0;
  display: block;
  height: auto;
  line-height: 1;
  margin: 0;
  background-color: inherit;
  overflow: initial;
  justify-content: center;
  align-items: center;
}

.cont .item image {
  width: 50rpx;
  height: 50rpx;
  margin: auto
}

.cont .item .txt {
  margin-top: 8rpx;
  color: #999;
}

.cont .bulge {
  background: #fff;
  top: -50rpx;
  height: 136rpx;
  border-radius: 50% 50% 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx 30rpx rgba(0, 0, 0, .3);
  z-index: 1;
}

.bulge .tab-bar-bulge{
  position: absolute;
  z-index: 10;
  width: 180%;
  height: 100%;
  background-color: #FFF;
  margin-top: 86rpx;
}

.cont .bulge .bar_img {
  position: relative;
  z-index: 10;
  width: 45rpx;
  height: 60rpx;
}

.cont .bulge .txt {
  position: relative;
  z-index: 10;
}

.cont .item .selectedColor {
  color: #3F74F6;
}

