.block {
    position: relative;
    width: 100%;
    height: 924rpx;
    background: #fff;
    border-radius: 10rpx;
}
.block-title-top {
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 30rpx 30rpx 24rpx 40rpx;
    justify-content: space-between;
    border-bottom: 1px solid #F1F1F1;
}
.block-left-title {
    color: #333;
    font-size: 36rpx;
    font-weight: 400;
    position: relative;
    top: 5rpx;
}
.block-content-wrapper {
    padding-left: 8rpx;
    height: 810rpx;
    overflow-y: auto;
}
.block-right-btn {
    width: 154rpx;
    height: 60rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    margin: 0;
    background-color: #3F74F6;
}
.t-radio__icon {
    width: 40rpx !important;
    height: 40rpx !important;    
}
.t-radio__title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
}
.t-radio--block {
    padding: 26rpx !important;
}
.block-inner-item {
    padding: 34rpx;
    margin-left: 98rpx;
    margin-right: 30rpx;
    color: #666;
    font-size: 28rpx;
    border-radius: 20rpx;
    background-color: #F4F7FF;
}
.inner-radio-group > .t-radio-group > .t-radio {
    background-color: #fff !important;
}
.inner-radio-group > .t-radio-group > .t-radio--block {
    padding: 0 !important;
    padding-bottom: 18rpx !important;
}
.t-radio__border {
    height: 10rpx !important;
    background-color: #fff !important;
}
.t-popup--bottom {
    border-top-left-radius: 40rpx !important;
    border-top-right-radius: 40rpx !important;
}