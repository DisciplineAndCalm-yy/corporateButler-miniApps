/* pages/subpages/pages/test.wxss */
.container {
    padding: 24rpx 30rpx;
    background-color: #F8FBFF;
}
.form-content {
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.04); 
}
.message_title_class {
    background-color: #fff;
}
.form-item {
    display: flex;
    min-height: 108rpx;
    padding: 0 40rpx;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1px solid #F2F2F2;
}
.form-item .label-name {
    color: #666;
}
.form-item:nth-child(2) {
    flex-direction: column;
    align-items: flex-start;
    padding: 40rpx 44rpx 32rpx 36rpx;
}
.form-item:nth-child(2) .label {
    margin-bottom: 20rpx;
}
.form-item:nth-child(2) .content {
    width: 100%;
}
.textarea-content-length {
    width: 100%;
    color: #999;
    font-size: 20rpx;
    font-weight: 400;
    text-align: right;
    margin-top: 10rpx;
}
.label {
    flex: 1;
    font-size: 28rpx;
    text-align: left;
}
.required {
    color: #e21616;
}
.label-name {
    color: #333333;
}
.picker-content {
    width: 445rpx;
    display: flex;
    justify-content: space-between;
}
.select {
    width: 445rpx;
    height: 72rpx;
    padding: 0px 16rpx;
    box-sizing: border-box;
    border: 1px solid #e0e0e0;
    border-radius: 6rpx;
    position: relative;
}
.select:nth-child(0) {
    margin-right: 6rpx;
}
span {
    font-weight: 400;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999999;
}
.input-wrapper {
    width: 446rpx;
    height: 72rpx;
    border-radius: 6rpx;
    padding: 0px 16rpx;
    box-sizing: border-box;
}
input {
    height: 72rpx;
    font-size: 28rpx;
    text-align: right;
}
.textarea-wrapper {
    height: 180rpx;
    padding: 24rpx;
    box-sizing: border-box;
    border: 1px solid #e0e0e0;
    border-radius: 6rpx;
}
textarea {
    width: 100%;
    height: 95%;
    font-size: 28rpx;
}
.radio-wrapper {
    width: 400rpx;
}
.radio {
    font-weight: 400;
    font-size: 28rpx;
    color: #999999;
}
.form-button {
    color: #FFF;
    background-color: #409eff;
}
.btns {
    display: flex;
    justify-content: center;
    position: relative;
}
.confirm {
    position: absolute;
    top: 70rpx;
    width: calc(100% - 106rpx);
    height: 88rpx;
    color: #fff;
    border-radius: 10rpx;
    text-align: center;
    line-height: 80rpx;
}
.confirm-span {
    font-weight: 600;
    font-size: 32rpx;
    color: #ffffff;
    background: #3F74F6;
    border-radius: 20rpx;
}
.picker-span {
    line-height: 69rpx;
}
.select image {
    width: 18rpx;
    height: 10rpx;
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -5rpx;
}
.uploader {
    display: block;
    padding: 40rpx;
}
.uploader .label .desc {
    font-size: 24rpx;
    color: #999999;
}
.uploader .upload-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.uploader .upload-wrapper .wrap {
    position: relative;
}
.uploader .upload-wrapper .delete-image {
    position: absolute;
    top: 30rpx;
    right: 10rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 10;
    background-repeat: no-repeat;
}
.uploader .upload-wrapper::after {
    content: '';
    width: 172rpx;
}
.uploader .upload-wrapper .upload-push-item {
    position: relative;
    width: 170rpx;
    height: 170rpx;
    margin-top: 24rpx;
    border: 1px solid #e0e0e0;
    border-radius: 6rpx;
}
.upload-push-item::before {
    content: '';
    width: 38rpx;
    height: 6rpx;
    border-radius: 4px;
    background: #3F74F6;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -19rpx;
    margin-top: -3rpx;
}
.upload-push-item::after {
    content: '';
    width: 6rpx;
    height: 38rpx;
    border-radius: 4px;
    background: #3F74F6;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -3rpx;
    margin-top: -19rpx;
}
.uploader .upload-wrapper .upload-item { 
    width: 172rpx;
    margin-top: 24rpx;
    position: relative;
}
.uploader .upload-wrapper .upload-item .img .img-box {
    width: 172rpx;
    height: 172rpx;
    border-radius: 3px;
    overflow: hidden;
}
.uploader .upload-wrapper .upload-item .file .file-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 172rpx;
    height: 172rpx;
    background: #e6f0ff;
    border-radius: 3px;
}
.uploader .upload-wrapper .upload-item .file-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 172rpx;
    height: 172rpx;
    background: #e6f0ff;
    border-radius: 3px;
}
.uploader .upload-wrapper .upload-item .file-box image {
    width: 172rpx;
    height: 172rpx;
}
.uploader .upload-wrapper .upload-item .file img {
    width: 50rpx;
    height: 50rpx;
}
.uploader .upload-wrapper .upload-item .name {
    margin-top: 12rpx;
    text-align: center;
    font-weight: 600;
    font-size: 28rpx;
    color: #6caafe;
}
.show-image {
    width: 172rpx !important;
    height: 172rpx !important;
}