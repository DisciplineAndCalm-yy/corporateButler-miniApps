.container {
    padding: 24rpx 30rpx;
    background-color: #F8FBFF;
}
.form-content {
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.04); 
}
.message_title_class {
    background-color: #fff;
}
.form-item {
    display: flex;
    min-height: 108rpx;
    padding: 0 40rpx;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1px solid #F2F2F2;
}
.form-item .label-name {
    color: #666;
}
.form-item:nth-child(1){
    display: flex;
    justify-content: space-between;
}
.form-item:nth-child(2) {
    flex-direction: column;
    align-items: flex-start;
    padding: 40rpx 44rpx 32rpx 36rpx;
}
.form-item:nth-child(2) .label {
    margin-bottom: 20rpx;
}
.form-item:nth-child(2) .content {
    width: 100%;
}
.textarea-content-length {
    width: 100%;
    color: #999;
    font-size: 20rpx;
    font-weight: 400;
    text-align: right;
    margin-top: 10rpx;
}
.label {
    flex: 1;
    font-size: 28rpx;
    text-align: left;
}
.required {
    color: #e21616;
}
.label-name {
    color: #333333;
}
.picker-content {
    min-width: 115rpx;
    display: flex;
    justify-content: space-between;
}
.chevron-right__icon-menu {
    position: relative;
    top: 5rpx;
}
.select {
    width: 210rpx;
    height: 72rpx;
    padding: 0px 16rpx;
    box-sizing: border-box;
    border: 1px solid #e0e0e0;
    border-radius: 6rpx;
    position: relative;
}
.select:nth-child(0) {
    margin-right: 6rpx;
}
span {
    font-weight: 400;
    font-size: 28rpx;
    line-height: 28rpx;
    /* color: #999999; */
}
.input-wrapper {
    width: 446rpx;
    height: 72rpx;
    border-radius: 6rpx;
    padding: 0px 16rpx;
    box-sizing: border-box;
}
input {
    height: 72rpx;
    font-size: 28rpx;
    text-align: right;
}
.textarea-wrapper {
    height: 180rpx;
    padding: 24rpx;
    box-sizing: border-box;
    border: 1px solid #f2f2f2;
    border-radius: 6rpx;
}
textarea {
    width: 100%;
    height: 95%;
    font-size: 28rpx;
}
.radio-wrapper {
    width: 400rpx;
}
.radio {
    font-weight: 400;
    font-size: 28rpx;
    color: #999999;
}
.form-button {
    color: #FFF;
    background-color: #409eff;
}
.btns {
    display: flex;
    justify-content: center;
    position: relative;
}
.picker-select {
    width: 100%;
    text-align: right;
    font-size: 28rpx;
    font-weight: 400;
    color: #3F74F6;
    display: flex;
}
.chevron-right {
    width: 9rpx;
    height: 17rpx;
}
.confirm {
    position: absolute;
    top: 70rpx;
    width: calc(100% - 106rpx);
    height: 88rpx;
    color: #fff;
    border-radius: 10rpx;
    text-align: center;
    line-height: 80rpx;
}
.confirm-span {
    font-weight: 600;
    font-size: 32rpx;
    color: #ffffff;
    background: #3F74F6;
    border-radius: 20rpx;
}
.picker-span {
    color: #000;
    line-height: 69rpx;
}
image {
    width: 18rpx;
    height: 10rpx;
    position: absolute;
    right: 10rpx;
    top: 50%;
    margin-top: -5rpx;
}
.t-picker__title {
    color: #333 !important;
    font-weight: 400 !important;
}
.t-picker-item__item.t-picker-item__active {
    color: #333 !important;
    font-size: 32rpx !important;
    font-weight: 600 !important;
}