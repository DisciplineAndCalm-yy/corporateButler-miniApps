/* pages/subpages/pages/settingTags/settingTags.wxss */
.settingTags {}
.settingTags_content {
  display: flex;
  width: 100%;
  height: calc(100% - 40rpx);
  padding-top: 40rpx;
  position: relative;
}
.settingTags_content_tabs {
  width: 200rpx;
  border-right: 1px solid #D9D9D9;
}
.settingTags_content_tags {
  width: calc(100% - 200rpx);
  padding: 10rpx 20rpx 200rpx;
  overflow-y: scroll;
}
.settingTags_content_tabs_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  color: #999;
  font-weight: 400;
  font-size: 24rpx;
}
.activeitem {
  color: #333;
  font-weight: 600;
  font-size: 28rpx;
}
.tabs_item_split {
  width: 1rpx;
  height: 1rpx;
}
.activeitem .tabs_item_split {
  width: 8rpx;
  height: 46rpx;
  background: #0F7CEE;
  border-radius: 0px 24rpx 24rpx 0px;
}

.tagswrap_card {
  display: inline-block;
  margin: 10rpx 10rpx;
}

.settingTags_savebtn {
  margin-left: 200rpx;
  border-top: 1px solid #D9D9D9;
  position: absolute;
  height: 160rpx;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #fff;
}
.settingTags_btns {
  width: 80%;
  margin-top: 20rpx;
  color: #fff;
  background-color: #0F7CEE;
  border-radius: 20rpx;
}