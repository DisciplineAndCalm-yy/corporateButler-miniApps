/* pages/subPagesForLeader/pages/superviseProject/superviseProject.wxss */
.superviseProject {
  overflow: hidden;
  background: #f5f6fa;
}
.superviseProject_title_class {
  background: #fff!important;
}
.supervise_record {
	padding: 30rpx 40rpx 20rpx;
	text-align: right;
	color: #1571F6;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
/* 督办记录内容 */
.superviseProject_content {
	padding: 0rpx 40rpx 30rpx;
}
.leader_project_supervise {
	margin-top: 20rpx;
	background-color: #fff;
	border-radius: 20rpx;
}
.leader_project_supervise_top {
	padding: 30rpx 30rpx 0;
}
.project_supervise_label {
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 700;
	line-height: normal;
	margin-bottom: 20rpx;
}
.project_supervise_tags {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: flex-start;
	color: #1571F6;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.project_supervise_tagitem {
	padding: 6rpx 12rpx;
	border-radius: 6rpx;
	opacity: 0.8;
	background: #D5E1FF;
	margin-bottom: 20rpx;
}
.project_supervise_tagitem:not(:last-child) {
	margin-right: 20rpx;
}
.project_supervise_progress {
	padding: 0 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 30rpx;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 24rpx;
	font-style: normal;
	font-weight: 400;
}
.project_supervise_progresswraper {
	display: flex;
	align-items: center;
}
.project_supervise_progress_icon {
	margin-right: 14rpx;
	width: 16rpx;
	height: 16rpx;
	border-radius: 50%;
	background-color: #E2D247;
}
.supervise_iconcolor_orange {
	background-color: #FA6625;
}
.supervise_iconcolor_red {
	background-color: #d6001b;
}
.leader_project_supervise_bottom {
	padding: 20rpx;
	display: flex;
	align-content: center;
	justify-content: space-around;
	color: #1770F6;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	border-top: 1px solid #E9E9E9;
}
.project_supervise_splitline {
	width: 1px;
	height: 22rpx;
	background-color: #E9E9E9;
}

/* 督办弹窗 */
.supervise_popup_wraper {
	padding-top: 20rpx;
	padding-bottom: calc(env(safe-area-inset-bottom)/2);
	border-radius: 20rpx 20rpx 0px 0px;
	background: #FFF;
}
.supervise_popup_titles {
	display: flex;
	align-items: center;
	justify-content: space-between;
	color: #333;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 32rpx;
	font-style: normal;
	font-weight: 700;
	letter-spacing: -0.3px;
}
.supervise_popup_titleswraper {
	display: flex;
	align-items: center;
}
.supervise_popup_titles_split {
	width: 8rpx;
	height: 46rpx;
	background: #0F7CEE;
	border-radius: 0px 24rpx 24rpx 0px;
	margin: 0 30rpx 0 -2rpx;
}
.supervise_popup_close {
	color: #187FFF;
	font-size: 28rpx;
	font-weight: 400;
	padding-right: 30rpx;
}
.supervise_popup_splitline {
	margin: 20rpx 40rpx;
	height: 1px;
	background-color: #E9E9E9;
}
.supervise_popup_content {
	padding: 0 30rpx 0rpx;
	color: #666;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 28rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.supervise_popup_label {
	color: #333;
	font-size: 32rpx;
	font-weight: 700;
	margin-bottom: 20rpx;
}
.supervise_popup_infos {
	margin-bottom: 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.supervise_popup_textarea {
	width: calc(100% - 40rpx);
	height: 200rpx;
	margin-bottom: 30rpx;
	padding: 20rpx;
	border-radius: 20rpx;
	background: #FAFAFA;
}
.supervise_popup_callphone {
	display: flex;
	align-items: center;
	color: #187FFF;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 32rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
}
.supervise_popup_callphoneicon {
	font-size: 32rpx;
	margin-right: 20rpx;
}
.supervise_popup_btn {
	color: #FFF;
	font-family: Alibaba PuHuiTi 2.0;
	font-size: 32rpx;
	font-style: normal;
	font-weight: 400;
	letter-spacing: -0.3px;
	border-radius: 20rpx;
	background: #187FFF;
}

/* 底部空元素 */
.empty {
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.has_nodata {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(153, 153, 153, 0.60);
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  letter-spacing: 6rpx;
  padding: 40rpx 0;
}
.nodata_img {
  width: 300rpx;
  height: 300rpx;
}